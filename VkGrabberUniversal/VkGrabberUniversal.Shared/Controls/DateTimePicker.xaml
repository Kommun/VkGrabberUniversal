<UserControl
    x:Class="VkGrabberUniversal.Controls.DateTimePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VkGrabberUniversal.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="picker">

    <StackPanel Orientation="Horizontal">
        <DatePicker Header="{Binding Header, ElementName=picker}"
                    Date="{Binding Date, ElementName=picker, Mode=TwoWay}"/>
        <TimePicker Time="{Binding Time, ElementName=picker, Mode=TwoWay}"
                    VerticalAlignment="Bottom"
                    Margin="10,0,0,0"/>
    </StackPanel>
</UserControl>