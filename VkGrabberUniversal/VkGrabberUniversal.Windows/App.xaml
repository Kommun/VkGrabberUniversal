<Application
    x:Class="VkGrabberUniversal.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VkGrabberUniversal"
    xmlns:controls="using:VkGrabberUniversal.Controls"
    RequestedTheme="Light">

    <Application.Resources>

        <!--Цвет фона приложения-->
        <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="LightGray"/>

        <!--Стиль заголовков-->
        <Style TargetType="ContentPresenter" x:Key="HeaderContentPresenterStyle">
            <Setter Property="Foreground" Value="{ThemeResource TextBoxForegroundHeaderThemeBrush}"/>
            <Setter Property="FontWeight" Value="SemiLight"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
        </Style>

        <!--Ширина секции-->
        <Style TargetType="controls:SettingsSection">
            <Setter Property="Width" Value="550"/>
        </Style>
    </Application.Resources>

</Application>
